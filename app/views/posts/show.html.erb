<p id="notice"><%= notice %></p>

<div class='container'>
  <div class='row'>
    <div class='posts-title'>
      <h4 class= 'six columns offset-by-two'><span class='slashes'>// </span><%= @post.title %></h4>
      </div>
    </div>
  </div>

  <div class='container'>
    <div class='posts-content'>
      <% if user_signed_in? %>
      <div class= 'six columns offset-by-two textarea'>
        <%= simple_format(@post.content) %>
      </div>
      <% else %>
      <div class= 'ten columns offset-by-two'>
        <%= simple_format(@post.content) %></p>
      </div>
      <% end %>
    </div>
    <div class='crud-btns two columns'>
        <% if user_signed_in? %>
          <button><%= link_to 'Edit', edit_post_path(@post) %></button>
          <button><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          <button><%= link_to 'Back', posts_path %></button>
        <% else %>
        <% end %>
      </div>
    </div>
