    <% else %>
    <div class= 'ten columns offset-by-one'>
      <%= simple_format(post.content)%>
    </div>
    <% end %>
  </div>
  <div class= 'date six columns offset-by-one'>
    <span class='slashes'>// </span><%= post.created_at.strftime("%B_%e_%Y") %></p>
